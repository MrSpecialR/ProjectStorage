@using ProjectStorage.Services.Models.Category
@model IEnumerable<ProjectStorage.Services.Models.Category.CategoryListingServiceModel>

@{
    ViewBag.Title = "All Categories";
    int counter = 1;
}

<h2>
    All Categories
</h2>
<hr />
<table class="table table-hover table-primary">
    @foreach (var category in Model)
    {
        <tr><td>@Html.ActionLink($"{counter}) {category.Name}", "Browse", new { id = category.Id }, null)</td></tr>
        {
            counter++;
        }
    }
</table>