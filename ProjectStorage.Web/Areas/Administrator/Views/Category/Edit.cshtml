@using ProjectStorage.Services.Models.Category
@model ProjectStorage.Services.Models.Category.CategoryListingServiceModel

@{
    ViewBag.Title = "Edit Category";
}

<h2>Edit Category - @Model.Name</h2>
<hr />
<form method="post">
    <div class="col-md-4">
        <div class="form-group row">
            <label asp-for="Name" class="col-2 col-form-label">Name</label>
            <div class="col-10">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <input type="submit" class="btn btn-success" value="Edit" />
    </div>
</form>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}